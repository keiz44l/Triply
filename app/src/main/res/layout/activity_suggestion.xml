<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center">

        <TextView
            android:id="@+id/texteSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need inspiration ?"
            android:textSize="18sp"
            android:paddingTop="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center">

            <View
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="#CCCCCC"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/texteImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tirana"
                android:textSize="18sp"
                android:paddingTop="0dp" />

            <TextView
                android:id="@+id/texteImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albania"
                android:textSize="18sp"
                android:paddingTop="0dp" />

        </LinearLayout>

        <Space
            android:id="@+id/spaceImages1"
            android:layout_width="50dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center">

            <View
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="#CCCCCC"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/texteImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alfatar"
                android:textSize="18sp"
                android:paddingTop="0dp" />

            <TextView
                android:id="@+id/texteImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulgaria"
                android:textSize="18sp"
                android:paddingTop="0dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center">

            <View
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="#CCCCCC"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/texteImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lyon"
                android:textSize="18sp"
                android:paddingTop="0dp" />

            <TextView
                android:id="@+id/texteImage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="France"
                android:textSize="18sp"
                android:paddingTop="0dp" />

        </LinearLayout>

        <Space
            android:id="@+id/spaceImages2"
            android:layout_width="50dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center">

            <View
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="#CCCCCC"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/texteImage7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Byron Bay"
                android:textSize="18sp"
                android:paddingTop="0dp" />

            <TextView
                android:id="@+id/texteImage8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:textSize="18sp"
                android:paddingTop="0dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>