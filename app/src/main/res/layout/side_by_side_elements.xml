<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:gravity="center">

    <!-- Boîte à cocher pour préciser si un retour est prévu ou non -->
    <CheckBox android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure only" />

    <!-- Séparation entre la boîte à cocher et le bouton de préférences -->
    <Space
        android:id="@+id/space"
        android:layout_width="50dp"
        android:layout_height="0dp"/>

    <!-- Bouton permettant d'afficher les préférences -->
    <Button
        android:id="@+id/boutonPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add preferences" />

</LinearLayout>